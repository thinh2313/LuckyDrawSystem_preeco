@model IEnumerable<PreecoLuckyDraw.Models.PRIZE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-table">
    <div style="display:flex">
        <h2 class=" title-header" style="width: 95% ">GIẢI</h2>
        <h2 style="float: right; ">
            <a href="/Prize/Create" class="btn-create">+</a>

        </h2>
    </div>
    <div class="box-container">
        <table class="table">
            <tr>
                <th>
                    Tên giải
                </th>
                @if ((int)Session["STATUS"] == 1|| (int)Session["STATUS"] == 2313)
                {
                    <th></th>
                    }
                </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NAME)
                    </td>
                    @if ((int)Session["STATUS"] == 1 || (int)Session["STATUS"] == 2313)
                    {
                        <td>
                            <a href="/Prize/Edit/@item.IDPRIZE" class="btn-program">Sửa</a> 
                            @if((int)Session["STATUS"] == 2313) { 
                            <span> | </span>
                            <a href="/Prize/Delete/@item.IDPRIZE" class="btn-delete">Xóa</a>
                            }
                        </td>
                    }

                </tr>
            }

        </table>
    </div>
</div>